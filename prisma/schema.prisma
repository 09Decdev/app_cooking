datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  avatar   String?
  role     String  @default("USER")

  createdAt DateTime @default(now())

  recipes  Recipe[]
  orders   Order[]
  likes    Like[]
  comments Comment[]
  cart     Cart?
  Category Category[]
}

model Category {
  id       String   @id @default(uuid())
  name     String
  image    String?
  authorId String
  author   User     @relation(fields: [authorId], references: [id])
  recipes  Recipe[]
}

model Recipe {
  id          String  @id @default(uuid())
  title       String
  image       String?
  description String?
  cookTime    Int

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  ingredients RecipeIngredient[]
  steps       Step[]
  likes       Like[]
  comments    Comment[]
}

model Step {
  id       String  @id @default(uuid())
  order    Int
  content  String
  image    String?
  recipeId String
  recipe   Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([recipeId, order])
}

model Ingredient {
  id       String             @id @default(uuid())
  name     String
  products Product[]
  recipes  RecipeIngredient[]
}

model RecipeIngredient {
  id           String     @id @default(uuid())
  recipeId     String
  recipe       Recipe     @relation(fields: [recipeId], references: [id])
  ingredientId String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  amount       String
}

model Product {
  id           String  @id @default(uuid())
  name         String
  price        Int
  image        String?
  description  String?
  manufacturer String
  authorId     String

  ingredientId String?
  ingredient   Ingredient? @relation(fields: [ingredientId], references: [id])

  cartItems  CartItem[]
  orderItems OrderItem[]
}

model Cart {
  id     String     @id @default(uuid())
  userId String     @unique
  user   User       @relation(fields: [userId], references: [id])
  items  CartItem[]
}

model CartItem {
  id        String  @id @default(uuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
}

model Order {
  id          String  @id @default(uuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id])
  totalPrice  Int
  status      String  @default("PENDING")
  userName    String
  phoneNumber String
  address     String
  note        String?

  items     OrderItem[]
  createdAt DateTime    @default(now())
}

model OrderItem {
  id          String   @id @default(uuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
  productName String
  price       Int
  quantity    Int
  Product     Product? @relation(fields: [productId], references: [id])
  productId   String?
}

model Like {
  id       String @id @default(uuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])

  @@unique([userId, recipeId])
}

model Comment {
  id       String @id @default(uuid())
  content  String
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])
}

model Plan {
  id            String         @id @default(uuid())
  name          String
  price         Float
  duration      Int // days
  description   String?
  createdAt     DateTime       @default(now())
  subscriptions Subscription[]
}

model Subscription {
  id        String   @id @default(uuid())
  userId    String
  planId    String
  startDate DateTime @default(now())
  endDate   DateTime
  status    String   @default("active")

  plan         Plan          @relation(fields: [planId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id                String    @id @default(uuid())
  userId            String
  subscriptionId    String?
  amount            Float
  orderInfo         String?
  currency          String    @default("VND")
  status            String    @default("pending")
  itemType          String
  itemId            String?
  vnp_TransactionNo String?
  vnp_PayDate       String?
  vnp_BankCode      String?
  createdAt         DateTime  @default(now())
  expiresAt         DateTime?

  subscription Subscription?        @relation(fields: [subscriptionId], references: [id])
  history      TransactionHistory[]
}

model TransactionHistory {
  id               String   @id @default(uuid())
  transactionId    String
  status           String
  message          String?
  vnp_ResponseCode String?
  createdAt        DateTime @default(now())

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
}
