datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  avatar   String? // URL ảnh
  role     String  @default("USER")

  createdAt DateTime @default(now())

  // Quan hệ
  recipes  Recipe[]
  orders   Order[]
  likes    Like[]
  comments Comment[]
  cart     Cart? // 1 User có 1 giỏ hàng
  Category Category[]
}

// các danh mục món ăn
model Category {
  id       String   @id @default(uuid())
  name     String
  image    String?
  authorId String
  author   User     @relation(fields: [authorId], references: [id])
  recipes  Recipe[]
}

model Recipe {
  id          String  @id @default(uuid())
  title       String
  image       String? // Ảnh đại diện
  description String?
  cookTime    Int // Phút

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  ingredients RecipeIngredient[] // Nguyên liệu cần cho món này
  steps       Step[] // Các bước nấu
  likes       Like[]
  comments    Comment[]
}

// Các bước
model Step {
  id       String  @id @default(uuid())
  order    Int
  content  String
  image    String?
  recipeId String
  recipe   Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}

// nguyên liệu
model Ingredient {
  id       String             @id @default(uuid())
  name     String
  products Product[]
  recipes  RecipeIngredient[]
}

model RecipeIngredient {
  id           String     @id @default(uuid())
  recipeId     String
  recipe       Recipe     @relation(fields: [recipeId], references: [id])
  ingredientId String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  amount       String // Lưu chuỗi cho nhanh: "200g", "1 quả"
}

// 3. STORE (Cửa hàng)
model Product {
  id           String  @id @default(uuid())
  name         String // "Thịt bò Mỹ khay 500g"
  price        Int // Giá tiền (VND)
  image        String?
  description  String?
  manufacturer String
  authorId     String

  ingredientId String? // Map với nguyên liệu nấu ăn
  ingredient   Ingredient? @relation(fields: [ingredientId], references: [id])

  cartItems  CartItem[]
  orderItems OrderItem[]
}

model Cart {
  id     String     @id @default(uuid())
  userId String     @unique
  user   User       @relation(fields: [userId], references: [id])
  items  CartItem[]
}

model CartItem {
  id        String  @id @default(uuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
}

model Order {
  id         String      @id @default(uuid())
  userId     String
  user       User        @relation(fields: [userId], references: [id])
  totalPrice Int
  status     String      @default("PENDING") // PENDING, PAID
  items      OrderItem[]
  createdAt  DateTime    @default(now())
}

model OrderItem {
  id          String   @id @default(uuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
  productName String // Lưu tên SP lúc mua
  price       Int // Lưu giá lúc mua
  quantity    Int
  Product     Product? @relation(fields: [productId], references: [id])
  productId   String?
}

// 4. INTERACTION (Tương tác)
model Like {
  id       String @id @default(uuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])

  @@unique([userId, recipeId]) // 1 người chỉ like 1 lần
}

model Comment {
  id       String @id @default(uuid())
  content  String
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])
}
model Plan {
  id            String         @id @default(uuid())
  name          String
  price         Float
  duration      Int // days
  description   String?
  createdAt     DateTime       @default(now())
  subscriptions Subscription[]
}

model Subscription {
  id        String   @id @default(uuid())
  userId    String
  planId    String
  startDate DateTime @default(now())
  endDate   DateTime
  status    String   @default("active")

  plan         Plan          @relation(fields: [planId], references: [id])
  transactions Transaction[]
}
model Transaction {
  id                String    @id @default(uuid())
  userId            String
  subscriptionId    String?
  amount            Float
  orderInfo         String?
  currency          String    @default("VND")
  status            String    @default("pending")
  itemType          String
  itemId            String?
  vnp_TransactionNo String?
  vnp_PayDate       String?
  vnp_BankCode      String?
  createdAt         DateTime  @default(now())
  expiresAt         DateTime?

  subscription Subscription?        @relation(fields: [subscriptionId], references: [id])
  history      TransactionHistory[]
}

model TransactionHistory {
  id               String   @id @default(uuid())
  transactionId    String
  status           String
  message          String?
  vnp_ResponseCode String?
  createdAt        DateTime @default(now())

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
}
